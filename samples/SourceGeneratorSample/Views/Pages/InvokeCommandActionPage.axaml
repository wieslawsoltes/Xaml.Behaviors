<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:SourceGeneratorSample.ViewModels"
             xmlns:ac="using:Avalonia.Controls"
             x:Class="SourceGeneratorSample.Views.Pages.InvokeCommandActionPage"
             x:DataType="vm:MainViewModel">
  <StackPanel Spacing="10">
    <TextBlock Text="InvokeCommandAction" FontWeight="Bold" />
    <Button Content="Typed Command Action">
      <Interaction.Behaviors>
        <ac:ButtonClickTrigger>
          <vm:TypedCommandAction Command="{Binding TriggerExternalCommand}" CommandParameter="Test" />
        </ac:ButtonClickTrigger>
      </Interaction.Behaviors>
    </Button>
    <TextBlock Text="{Binding ExternalTriggerStatus}" />
  </StackPanel>
</UserControl>
