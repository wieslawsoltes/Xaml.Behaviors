<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:SourceGeneratorSample.ViewModels"
             xmlns:ac="using:Avalonia.Controls"
             xmlns:conv="using:SourceGeneratorSample.Converters"
             x:Class="SourceGeneratorSample.Views.Pages.AsyncActionPage"
             x:DataType="vm:MainViewModel">
  <StackPanel Spacing="10">
    <TextBlock Text="Async Action" FontWeight="Bold" />
    <StackPanel Orientation="Horizontal" Spacing="5">
      <Button Content="Submit Async" IsEnabled="{Binding IsBusy, Converter={x:Static conv:BooleanNegationConverter.Instance}}">
        <Interaction.Behaviors>
          <ac:ButtonClickTrigger>
            <vm:SubmitAsyncAction TargetObject="{Binding}" IsExecuting="{Binding IsBusy, Mode=OneWayToSource}" />
          </ac:ButtonClickTrigger>
        </Interaction.Behaviors>
      </Button>
      <TextBlock Text="{Binding IsBusy, StringFormat='Busy: {0}'}" VerticalAlignment="Center" />
    </StackPanel>

    <Button Content="Reset Async" IsEnabled="{Binding IsBusy, Converter={x:Static conv:BooleanNegationConverter.Instance}}">
      <Interaction.Behaviors>
        <ac:ButtonClickTrigger>
          <vm:ResetAsyncAction TargetObject="{Binding}" IsExecuting="{Binding IsBusy, Mode=OneWayToSource}" />
        </ac:ButtonClickTrigger>
      </Interaction.Behaviors>
    </Button>
  </StackPanel>
</UserControl>
