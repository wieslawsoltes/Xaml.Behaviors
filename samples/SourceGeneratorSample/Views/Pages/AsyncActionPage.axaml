<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:SourceGeneratorSample.ViewModels"
             x:Class="SourceGeneratorSample.Views.Pages.AsyncActionPage"
             x:DataType="vm:MainViewModel">
  <StackPanel Spacing="10">
    <TextBlock Text="Async Action" FontWeight="Bold" />
    <StackPanel Orientation="Horizontal" Spacing="5">
      <Button Content="Submit Async" IsEnabled="{Binding !IsBusy}">
        <Interaction.Behaviors>
          <EventTriggerBehavior EventName="Click">
            <vm:SubmitAsyncAction TargetObject="{Binding}" IsExecuting="{Binding IsBusy, Mode=OneWayToSource}" />
          </EventTriggerBehavior>
        </Interaction.Behaviors>
      </Button>
      <TextBlock Text="{Binding IsBusy, StringFormat='Busy: {0}'}" VerticalAlignment="Center" />
    </StackPanel>

    <Button Content="Reset Async" IsEnabled="{Binding !IsBusy}">
      <Interaction.Behaviors>
        <EventTriggerBehavior EventName="Click">
          <vm:ResetAsyncAction TargetObject="{Binding}" IsExecuting="{Binding IsBusy, Mode=OneWayToSource}" />
        </EventTriggerBehavior>
      </Interaction.Behaviors>
    </Button>
  </StackPanel>
</UserControl>
