<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="BehaviorsTestApplication.Views.Pages.MouseDragPositionBehaviorView"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250">
  <StackPanel Margin="5" Spacing="8">
    <Canvas Width="200" Height="120" Background="LightGray">
      <Rectangle Fill="Blue" Width="40" Height="40" Canvas.Left="20" Canvas.Top="20">
        <Interaction.Behaviors>
          <MouseDragElementBehavior x:Name="DragBehavior" ConstrainToParentBounds="True" />
        </Interaction.Behaviors>
      </Rectangle>
    </Canvas>
    <TextBlock Text="{Binding X, ElementName=DragBehavior, StringFormat='X: {0:F0}'}" />
    <TextBlock Text="{Binding Y, ElementName=DragBehavior, StringFormat='Y: {0:F0}'}" />
  </StackPanel>
</UserControl>
