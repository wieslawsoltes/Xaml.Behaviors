<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="BehaviorsTestApplication.Views.Pages.TiltEffectBehaviorView">
    <ScrollViewer>
        <StackPanel Spacing="20" Margin="20">
            <TextBlock Text="TiltEffectBehavior" FontSize="24" FontWeight="Bold" />
            <TextBlock Text="Hover over the cards below to see the 3D tilt effect." />
            
            <WrapPanel>
                <Border Width="200" Height="120" Background="#3498db" CornerRadius="10" Margin="10" BoxShadow="0 5 15 0 #50000000">
                    <Interaction.Behaviors>
                        <TiltEffectBehavior TiltStrength="30" />
                    </Interaction.Behaviors>
                    <TextBlock Text="Hover Me" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" />
                </Border>
                
                <Border Width="200" Height="120" Background="#e74c3c" CornerRadius="10" Margin="10" BoxShadow="0 5 15 0 #50000000">
                    <Interaction.Behaviors>
                        <TiltEffectBehavior TiltStrength="60" />
                    </Interaction.Behaviors>
                    <TextBlock Text="Strong Tilt" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" />
                </Border>
                
                <Border Width="200" Height="120" Background="#2ecc71" CornerRadius="10" Margin="10" BoxShadow="0 5 15 0 #50000000">
                    <Interaction.Behaviors>
                        <TiltEffectBehavior TiltStrength="15" />
                    </Interaction.Behaviors>
                    <TextBlock Text="Subtle Tilt" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" />
                </Border>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
