<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BehaviorsTestApplication.Views.Pages.NetworkStatusTriggerView">
  <StackPanel Spacing="20" Margin="20">
    <TextBlock Text="NetworkStatusTrigger" FontWeight="Bold" FontSize="18" />
    <TextBlock Text="Disconnect/Connect your network to see the status change." />

    <Border Name="StatusBorder" Background="LightGray" Padding="20" CornerRadius="5">
      <StackPanel>
        <TextBlock Name="StatusText" Text="Current Status: Unknown" FontWeight="Bold" />
        <TextBlock Text="(Note: Initial status is not detected by the trigger, only changes)" FontSize="12"
                   FontStyle="Italic" />
      </StackPanel>
    </Border>

    <Interaction.Behaviors>
      <!-- Trigger when Online -->
      <NetworkStatusTrigger Status="Online">
        <ChangePropertyAction TargetObject="{Binding #StatusText}" PropertyName="Text" Value="Current Status: Online" />
        <ChangePropertyAction TargetObject="{Binding #StatusBorder}" PropertyName="Background" Value="LightGreen" />
      </NetworkStatusTrigger>

      <!-- Trigger when Offline -->
      <NetworkStatusTrigger Status="Offline">
        <ChangePropertyAction TargetObject="{Binding #StatusText}" PropertyName="Text" Value="Current Status: Offline" />
        <ChangePropertyAction TargetObject="{Binding #StatusBorder}" PropertyName="Background" Value="LightCoral" />
      </NetworkStatusTrigger>
    </Interaction.Behaviors>
  </StackPanel>
</UserControl>
