<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BehaviorsTestApplication.Views.Pages.SelectAllOnFocusBehaviorView">
    <ScrollViewer>
        <StackPanel Spacing="20" Margin="20">
            <TextBlock Text="SelectAllOnFocusBehavior" FontSize="24" FontWeight="Bold" />
            <TextBlock Text="Tab through these boxes. Text should be automatically selected." />
            <TextBox Text="Select me!">
                <Interaction.Behaviors>
                    <SelectAllOnFocusBehavior />
                </Interaction.Behaviors>
            </TextBox>
            <TextBox Text="Me too!">
                <Interaction.Behaviors>
                    <SelectAllOnFocusBehavior />
                </Interaction.Behaviors>
            </TextBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
