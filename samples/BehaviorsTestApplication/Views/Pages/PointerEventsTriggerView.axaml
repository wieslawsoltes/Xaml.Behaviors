<UserControl x:Class="BehaviorsTestApplication.Views.Pages.PointerEventsTriggerView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:BehaviorsTestApplication.Views.Pages"
             x:DataType="local:PointerEventsTriggerView"
             mc:Ignorable="d"
             d:DesignWidth="360"
             d:DesignHeight="320">
  <Grid Margin="12" RowDefinitions="Auto,Auto,*" RowSpacing="12">
    <TextBlock Text="PointerEventsTrigger listens to press/move/release on a single trigger and invokes actions for each." TextWrapping="Wrap" />
    <Border Grid.Row="1"
            Height="140"
            Background="LightGray"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="6">
      <Interaction.Behaviors>
        <PointerEventsTrigger>
          <CallMethodAction TargetObject="{Binding}" MethodName="OnPointerEvent" />
        </PointerEventsTrigger>
      </Interaction.Behaviors>
      <TextBlock Text="Press, move, and release inside this area" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Border>
    <ListBox Grid.Row="2" ItemsSource="{Binding Events}" />
  </Grid>
</UserControl>
