<UserControl x:Class="BehaviorsTestApplication.Views.Pages.MultiDataTriggerBehaviorView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel Spacing="12">
    <TextBlock Text="Use the slider and checkbox together. Each MultiDataTrigger reacts only when every condition in its collection is satisfied."
               TextWrapping="Wrap" />
    <Border BorderThickness="1"
            BorderBrush="{DynamicResource ThemeBorderLowBrush}"
            Padding="12">
      <StackPanel Spacing="8">
        <TextBlock Text="Combined state:"
                   FontWeight="SemiBold" />
        <TextBlock Name="TargetTextBlock"
                   FontSize="24">
          <Interaction.Behaviors>
            <MultiDataTrigger>
              <MultiDataTrigger.Conditions>
                <Condition Binding="{Binding #TargetSlider.Value}"
                           ComparisonCondition="GreaterThanOrEqual"
                           Value="50" />
                <Condition Binding="{Binding #TargetCheckBox.IsChecked}"
                           ComparisonCondition="Equal"
                           Value="True" />
              </MultiDataTrigger.Conditions>
              <ChangePropertyAction PropertyName="Text"
                                    Value="Ready" />
            </MultiDataTrigger>
            <MultiDataTriggerBehavior>
              <MultiDataTriggerBehavior.Conditions>
                <Condition Binding="{Binding #TargetSlider.Value}"
                           ComparisonCondition="GreaterThanOrEqual"
                           Value="50" />
                <Condition Binding="{Binding #TargetCheckBox.IsChecked}"
                           ComparisonCondition="Equal"
                           Value="False" />
              </MultiDataTriggerBehavior.Conditions>
              <ChangePropertyAction PropertyName="Text"
                                    Value="Checkbox unchecked" />
            </MultiDataTriggerBehavior>
            <MultiDataTriggerBehavior>
              <MultiDataTriggerBehavior.Conditions>
                <Condition Binding="{Binding #TargetSlider.Value}"
                           ComparisonCondition="LessThan"
                           Value="50" />
                <Condition Binding="{Binding #TargetCheckBox.IsChecked}"
                           ComparisonCondition="Equal"
                           Value="True" />
              </MultiDataTriggerBehavior.Conditions>
              <ChangePropertyAction PropertyName="Text"
                                    Value="Slider too low" />
            </MultiDataTriggerBehavior>
            <MultiDataTriggerBehavior>
              <MultiDataTriggerBehavior.Conditions>
                <Condition Binding="{Binding #TargetSlider.Value}"
                           ComparisonCondition="LessThan"
                           Value="50" />
                <Condition Binding="{Binding #TargetCheckBox.IsChecked}"
                           ComparisonCondition="Equal"
                           Value="False" />
              </MultiDataTriggerBehavior.Conditions>
              <ChangePropertyAction PropertyName="Text"
                                    Value="Move slider and check" />
            </MultiDataTriggerBehavior>
          </Interaction.Behaviors>
        </TextBlock>
        <CheckBox Name="TargetCheckBox"
                  Content="Enabled" />
        <Slider Name="TargetSlider"
                Minimum="0"
                Maximum="100"
                SmallChange="25"
                Value="0" />
      </StackPanel>
    </Border>
  </StackPanel>
</UserControl>
