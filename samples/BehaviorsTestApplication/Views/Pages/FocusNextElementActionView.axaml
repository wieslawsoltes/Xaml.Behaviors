<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BehaviorsTestApplication.Views.Pages.FocusNextElementActionView">
    <ScrollViewer>
        <StackPanel Spacing="20" Margin="20">
            <TextBlock Text="FocusNextElementAction" FontSize="24" FontWeight="Bold" />
            <TextBlock Text="Press any key in the first box to move focus to the next one (using KeyDownEventTrigger)." />
            <TextBox Text="Press a key here">
                <Interaction.Behaviors>
                    <KeyDownEventTrigger>
                        <FocusNextElementAction />
                    </KeyDownEventTrigger>
                </Interaction.Behaviors>
            </TextBox>
            <TextBox Text="Focus lands here" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
