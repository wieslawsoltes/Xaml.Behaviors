<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BehaviorsTestApplication.Views.Pages.LoseFocusOnEnterBehaviorView">
  <StackPanel Spacing="10" Margin="10">
    <TextBlock Text="LoseFocusOnEnterBehavior" FontWeight="Bold" />
    <TextBlock Text="Type in the TextBox and press Enter to lose focus." />
    <TextBox Text="Press Enter to lose focus">
      <Interaction.Behaviors>
        <LoseFocusOnEnterBehavior />
      </Interaction.Behaviors>
    </TextBox>
    <Button Content="Focusable Button" />
  </StackPanel>
</UserControl>
