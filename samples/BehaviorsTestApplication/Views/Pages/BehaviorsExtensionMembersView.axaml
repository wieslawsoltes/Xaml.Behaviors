<UserControl x:Class="BehaviorsTestApplication.Views.Pages.BehaviorsExtensionMembersView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BehaviorsTestApplication.ViewModels"
             x:DataType="vm:MainWindowViewModel"
             mc:Ignorable="d"
             d:DesignWidth="600"
             d:DesignHeight="450">
  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>
  <StackPanel Spacing="16"
              Margin="24">
    <TextBlock Text="C# 14 extension members surface the Behaviors attached property directly on AvaloniaObject. This tab shows how you can use inherited syntax like Border.Behaviors in XAML without going through the Interaction helper."
               TextWrapping="Wrap" />
    <Border x:Name="ExtensionBorder"
            Background="#FFF0F0F0"
            BorderBrush="#FFB0BEC5"
            BorderThickness="1"
            CornerRadius="6"
            Padding="16">
      <StackPanel Spacing="12">
        <TextBlock Text="Hover the panel or click the button to see behaviors applied via Border.Behaviors."
                   TextWrapping="Wrap" />
        <Button x:Name="ExtensionButton"
                HorizontalAlignment="Left"
                Content="Use extension behaviors" />
        <TextBlock FontFamily="Consolas,Menlo,Monaco,Monospace"
                   FontSize="12"
                   Text="&lt;Border.Behaviors&gt;..."
                   Foreground="#FF546E7A" />
      </StackPanel>
      <Border.Behaviors>
        <EventTriggerBehavior EventName="PointerEntered">
          <ChangePropertyAction TargetObject="{Binding #ExtensionBorder}"
                                PropertyName="Background"
                                Value="#FFE0F4FF" />
        </EventTriggerBehavior>
        <EventTriggerBehavior EventName="PointerExited">
          <ChangePropertyAction TargetObject="{Binding #ExtensionBorder}"
                                PropertyName="Background"
                                Value="#FFF0F0F0" />
        </EventTriggerBehavior>
        <EventTriggerBehavior EventName="PointerPressed">
          <ChangePropertyAction TargetObject="{Binding #StatusText}"
                                PropertyName="Text"
                                Value="The extension property handled PointerPressed and updated this message." />
        </EventTriggerBehavior>
        <EventTriggerBehavior EventName="PointerReleased">
          <ChangePropertyAction TargetObject="{Binding #StatusText}"
                                PropertyName="Text"
                                Value="Hover or click to interact with Border.Behaviors." />
        </EventTriggerBehavior>
      </Border.Behaviors>
    </Border>
    <TextBlock x:Name="StatusText"
               Text="Hover or click to interact with Border.Behaviors."
               TextWrapping="Wrap" />
  </StackPanel>
</UserControl>
