<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:drag="clr-namespace:Avalonia.Xaml.Interactions.Draggable;assembly=Xaml.Behaviors.Interactions.Draggable"
        x:Class="Avalonia.Xaml.Interactions.UnitTests.Core.GridDragHorizontalWindow"
        Width="100" Height="100">
  <Grid ColumnDefinitions="*,*" Name="MainGrid">
    <Border Name="Source" Background="Red">
      <Interaction.Behaviors>
        <drag:GridDragBehavior />
      </Interaction.Behaviors>
    </Border>
    <Border Name="Target" Grid.Column="1" Background="Blue">
      <Interaction.Behaviors>
        <drag:GridDragBehavior />
      </Interaction.Behaviors>
    </Border>
  </Grid>
</Window>
